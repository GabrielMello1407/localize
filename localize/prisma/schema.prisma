generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  tickets   Ticket[]
  events    Event[] // Relacionamento com os eventos criados
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  date        DateTime
  location    String
  price       Float
  capacity    Int
  tickets     Ticket[]
  finished    Boolean  @default(false)
  createdAt   DateTime @default(now())
  creatorId   Int // Campo para associar o usu√°rio que criou o evento
  creator     User     @relation(fields: [creatorId], references: [id]) // Relacionamento com o criador do evento
}

model Ticket {
  id        Int      @id @default(autoincrement())
  userId    Int
  eventId   Int
  codeQr    String   @unique
  used      Boolean  @default(false)
  qrCodeUrl String // Adicionar esta linha
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  event Event @relation(fields: [eventId], references: [id])
}
